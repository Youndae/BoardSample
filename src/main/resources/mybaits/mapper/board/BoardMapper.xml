<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	<mapper namespace="com.exam.Board.BoardMapper">
	
	<select id="boardList" resultType="com.exam.Board.BoardVO">
		SELECT * FROM board
	</select>
	
	<insert id="insertBoard">
		INSERT INTO
		board(subject, writer, reg_datetime, content)
		value(#{subject}, #{writer}, now(), #{content})
	</insert>
	
	<update id="updateBoard">
		UPDATE board set
		subject = #{subject},
		content = #{content}
		WHERE boardNo = #{boardNo}
	</update>
	
	<delete id="deleteBoard">
		DELETE FROM board WHERE boardNo = #{boardNo}
	</delete>
	
	<select id="boardDetail" resultType="com.exam.Board.BoardVO">
		SELECT * FROM board
		WHERE boardNo = #{boardNo}
	</select>
	
	</mapper>